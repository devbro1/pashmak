{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*,json", "*.html", "*.css", "*.scss"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always"
}
