{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "rootDir": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
